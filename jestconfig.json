{
  "verbose": true,
  "testTimeout": 15000,
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "moduleDirectories": ["node_modules", "src"],
  "moduleNameMapper": {
    "^@stocks/(.*)$": "<rootDir>/src/stocks/$1",
    "^@utils/(.*)$": "<rootDir>/src/utils/$1",
    "^types/(.*)$": "<rootDir>/types/$1"
  }
}
